foldArray([1, 2, 3, 4, 5], 1) => [6, 6, 3]

foldArray([1, 2, 3, 4, 5], 2) => [9, 6]

foldArray([1, 2, 3, 4, 5], 3) => [15]

foldArray([-9, 9, -8, 8, 66, 23], 1) => [14, 75, 0]
