ğŸ¯ TestCase
foldArray([1, 2, 3, 4, 5], 1) => [6, 6, 3]

foldArray([1, 2, 3, 4, 5], 2) => [9, 6]

foldArray([1, 2, 3, 4, 5], 3) => [15]

foldArray([-9, 9, -8, 8, 66, 23], 1) => [14, 75, 0]

def fold_sum():
    a = [int(x) for x in input("ë°°ì—´ì„ ì…ë ¥í•˜ì„¸ìš” :").split()]
    b = int(input("ì—°ì‚° íšŸìˆ˜ë¥¼ ì…ë ¥í•˜ì„¸ìš” :"))
    length = len(a)
    fold = 0
    while fold < b:
        if length % 2 == 1:  # í™€ìˆ˜ê¸¸ì´ ë¦¬ìŠ¤íŠ¸ ì ‘ê¸°
            temp = list(0 for i in range(int(length / 2) + 1))
            n = 0
            for i in temp:
                temp[0 + n] = a[0 + n] + a[length - 1 - n]
                n += 1
                temp[int(length / 2)] = a[int(length / 2)]
            length = len(temp)
            a = temp
        else:  # ì§ìˆ˜ ê¸¸ì´ ë¦¬ìŠ¤íŠ¸ ì ‘ê¸°
            temp = list(0 for i in range(int(length / 2)))
            count = list(0 for i in range(len(temp) + 1))
            n = 0
            for i in temp:
                temp[0 + n] = a[0 + n] + a[length - 1 - n]
                n += 1
            length = len(temp)
            a = temp
        fold += 1
    return print(a)


if __name__ == '__main__':
    fold_sum()
