a =[3,4,4,2,1,5,6,7,7]

oder=1
oder2=0
for i in a:
  if oder %2 ==1:
    if i %2 ==1:
       oder2+= 1
    oder +=1
A= list(0 for i in range(oder2))
B= list(0 for i in range(oder2))

oder=1
oder2=0
for i in a:
  if oder %2 ==1:
    if i %2 ==1:
       A[oder2] = 1
       B[oder2] oder -1
       oder2 += 1
   oder += 1
A.sort()

incert = 0
while incert < oder2:
  a[B[incert]] = A[incert]
  incert+ =1
       
